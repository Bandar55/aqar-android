<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/placeholder_gray">

        <ImageView
            android:id="@+id/image_property_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_property_detail"
            android:layout_alignBottom="@+id/image_property_detail"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/water_mark" />


    </RelativeLayout>
</layout>