<android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activitys.MainActivity">




                <android.support.v7.widget.Toolbar
                    android:id="@+id/my_toolbar_main_activity"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/setting_icon_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:src="@drawable/filter_icon"
                            tools:ignore="RtlSymmetry" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@drawable/light_gray_round_corner">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginEnd="@dimen/_16sdp">

                                <ImageView
                                    android:id="@+id/ivSearch"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/search_new_icon" />

                                <TextView
                                    android:id="@+id/searchedittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/location_search"
                                    android:imeOptions="actionSearch"
                                    android:inputType="text"
                                    android:textColor="@android:color/black"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/_14ssp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/post_property_main_activty_add_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/addmore_icon" />
                    </LinearLayout>


                </android.support.v7.widget.Toolbar>

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_toolbar_main_activity"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:id="@+id/all_main_text"
                            android:layout_width="@dimen/_56sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/_all"

                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:id="@+id/all_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@color/dark_blue" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sale_main_text"
                            android:layout_width="@dimen/_56sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/sale"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:id="@+id/sale_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@android:color/holo_red_dark"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rent_main_text"
                            android:layout_width="@dimen/_56sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/rent"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:id="@+id/view_rent"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@color/green"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/professional_main_text"
                            android:layout_width="@dimen/_99sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/professional"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:id="@+id/view_professional"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@color/orange"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/business_main_text"

                            android:layout_width="@dimen/_88sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/business"
                                android:textColor="@color/magenta"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:id="@+id/view_business"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:background="@color/magenta"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.aqar55.helper.MapWrapperLayout
                    android:id="@+id/map_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_nav_layout"
                    android:layout_below="@+id/horizontal_scroll_view">

                    <fragment
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />

                </com.aqar55.helper.MapWrapperLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_total_property"
                    android:background="@drawable/canvas_total_property"
                    android:text="Total Properties Count:0"
                    android:gravity="center"
                    android:layout_below="@+id/horizontal_scroll_view"
                    android:padding="@dimen/dp_5"
                    android:textSize="@dimen/_14sdp"
                   android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/current_location_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/map_relative_layout"
                    android:layout_alignBottom="@+id/map_relative_layout"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp">

                    <LinearLayout
                        android:id="@+id/layout_dish_icon_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@android:color/white"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:id="@+id/dish_icon_location"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:src="@drawable/dish_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/currentlocationicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_dish_icon_location"
                        android:background="@android:color/white"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:id="@+id/location_layout_icon"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:src="@drawable/location_icon" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_sale_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/tv_total_property"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/salemainrecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerCategoryMainAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:layout_below="@+id/tv_total_property">

                </android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/main_professioanl_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/map_relative_layout"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layout_1_professional_main_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_blue_round_corner_border">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/category_1"
                            android:textColor="#2770B9"
                            android:textSize="@dimen/_12ssp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_2sdp"
                            android:src="@drawable/blue_tick_mark" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_2_professional_main_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/layout_1_professional_main_map"
                        android:background="@drawable/light_green_round_corner_border">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:text="@string/category_2"
                            android:textColor="#36AD3B"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_3_professional_main_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/layout_2_professional_main_map"
                        android:background="@drawable/light_red_round_corner_border">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:text="@string/category_3"
                            android:textColor="#EB4E42"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_rent_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_property"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rentrecyclermainrent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:layout_width="@dimen/_68sdp"
                        android:layout_height="match_parent"
                        android:gravity="end">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="match_parent"
                        android:gravity="end">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_84sdp"
                        android:layout_height="match_parent"
                        android:gravity="end">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_nav_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    app:layout_scrollFlags="scroll|enterAlways|snap">

                    <LinearLayout
                        android:id="@+id/list_nav"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/list_icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/list_button" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chat_nav"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/chat_icon" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/notification_nav"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/notification_icon" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/more_nav"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/menu_button" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/main_activity_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_nav_layout" />


            </RelativeLayout>


        <FrameLayout
            android:id="@+id/main_activity_container"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.v4.widget.DrawerLayout>
