<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/search_by_name_or_id"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSearchID"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/enter_search_here"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/business_category"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvSearchID"
                    app:layout_constraintStart_toStartOf="@+id/tvSearchID"
                    app:layout_constraintTop_toBottomOf="@+id/tvSearchID" />

                <TextView
                    android:id="@+id/tvBusinessCategory"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/select"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/subcategory"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvBusinessCategory"
                    app:layout_constraintStart_toStartOf="@+id/tvBusinessCategory"
                    app:layout_constraintTop_toBottomOf="@+id/tvBusinessCategory" />

                <TextView
                    android:id="@+id/tvSubCate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/select"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView55"
                    app:layout_constraintStart_toStartOf="@+id/textView55"
                    app:layout_constraintTop_toBottomOf="@+id/textView55" />


                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/specialities"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvLocationBusiness"
                    app:layout_constraintStart_toStartOf="@+id/tvLocationBusiness"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocationBusiness" />

                <TextView
                    android:id="@+id/tvSpecialitiies"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/show_all"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView66"
                    app:layout_constraintStart_toStartOf="@+id/textView66"
                    app:layout_constraintTop_toBottomOf="@+id/textView66" />

                <TextView
                    android:id="@+id/tvResetBusiness"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/dark_red_with_corner"
                    android:gravity="center"
                    android:text="@string/reset"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvSearchBusiness"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSpockenLanguage" />

                <TextView
                    android:id="@+id/tvSearchBusiness"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_blue_btn"
                    android:gravity="center"
                    android:text="@string/search"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvResetBusiness"
                    app:layout_constraintTop_toTopOf="@+id/tvResetBusiness" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/area_coverage"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvSpecialitiies"
                    app:layout_constraintStart_toStartOf="@+id/tvSpecialitiies"
                    app:layout_constraintTop_toBottomOf="@+id/tvSpecialitiies" />

                <TextView
                    android:id="@+id/tvAreaCoverage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/show_all"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvArea"
                    app:layout_constraintStart_toStartOf="@+id/tvArea"
                    app:layout_constraintTop_toBottomOf="@+id/tvArea" />

                <TextView
                    android:id="@+id/tvSpocken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/spoken_languages"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvAreaCoverage"
                    app:layout_constraintStart_toStartOf="@+id/tvAreaCoverage"
                    app:layout_constraintTop_toBottomOf="@+id/tvAreaCoverage" />

                <TextView
                    android:id="@+id/tvSpockenLanguage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/show_all"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvSpocken"
                    app:layout_constraintStart_toStartOf="@+id/tvSpocken"
                    app:layout_constraintTop_toBottomOf="@+id/tvSpocken" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/location"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvSubCate"
                    app:layout_constraintStart_toStartOf="@+id/tvSubCate"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubCate" />

                <TextView
                    android:id="@+id/tvLocationBusiness"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/light_gray_round_corner"
                    android:drawableRight="@drawable/updown_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/show_all"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvLocation"
                    app:layout_constraintStart_toStartOf="@+id/tvLocation"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</layout>