<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/greylight" android:startColor="@color/greylight" android:type="linear"/>

                    <corners android:radius="4dp"/>

                    <padding android:bottom="3dp" android:left="3dp" android:right="8dp" android:top="3dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/down_arrow_black"/> // you can place your dropdown image
            </item>
        </layer-list>
    </item>

</selector>